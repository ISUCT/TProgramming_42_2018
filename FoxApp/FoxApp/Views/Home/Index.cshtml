@model IEnumerable<FoxApp.Models.Fox>
@{
    ViewBag.Title = "Все лисицы";
}
<button type="button" class="btn btn-secondary btn-lg btn-block"><a asp-action="Create">Добавить лисицу</a></button>
@*<a asp-action="Create">Добавить лисицу</a>*@

<style>
    a {
        color: #ffffff; /* Цвет обычной ссылки */
        text-decoration: none; /* Убираем подчеркивание у ссылок */
    }

        a:visited {
            color: #ffffff; /* Цвет посещённой ссылки */
        }

        a:hover {
            color: #ffffff; /* Цвет ссылки при наведении на нее курсора мыши */
            text-decoration: none;
        }
</style>
<style>
    body {
        background: #333; /* Цвет фона */
        color: #ffffff; /* Цвет текста */
    }
</style>
<style>
    td {
        color: #ffffff; /* Цвет текста */
    }
</style>

<table class="table">
    @*<tr><td>Имя</td><td>Вид</td><td>Описание</td></tr>*@
    @foreach (var item in Model)
    {
        <tr>
            <td align="center">@item.Name</td>
            <td align="right">
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
<img src="https://img.macos.ms/2015.12-JP-Fox/LR2015.12-JP-Fox-1.jpg" class="img-fluid">